---
const { title, image, link } = Astro.props;
---

<div class="course-card">
    <img src={image} alt={title} class="course-image">
    <div class="details">
        <h2>{title}</h2>
        <a href={link} class="start-button">Start to learn</a>
    </div>
</div>

<style>
    .course-card {
        position: relative;
        border-radius: 15px;
        overflow: hidden;
        width: 300px;
        height: 200px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .course-card:hover {
        transform: translateY(-5px);
    }

    .course-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .details {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: #2C2C2C;
        padding: 20px;
        color: white;
    }

    h2 {
        margin: 0 0 15px 0;
        font-size: 1.2rem;
        font-weight: bold;
    }

    .start-button {
        display: inline-block;
        background-color: rgba(255, 255, 255, 0.9);
        color: #082033;
        padding: 8px 20px;
        border-radius: 20px;
        text-decoration: none;
        font-size: 0.9rem;
        transition: background-color 0.3s ease;
    }

    .start-button:hover {
        background-color: white;
    }
</style>