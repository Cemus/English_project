---
const { title, image, link } = Astro.props;
---

<div class="course-card">
    <img src={image} alt={title} class="course-image">
    <div class="details">
        <p>{title}</p>
        <a href={link} class="start-button">Start to learn</a>
    </div>
</div>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

    .course-card {
        position: relative;
        border-radius: 30px;
        overflow: hidden;
        width: auto;
        height: 430px;
        box-shadow: 0 4px 8px rgba(0, 4, 4, 0.25);
    }

    .course-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .details {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: #2C2C2C;
        padding: 20px; 
        display:flex;
        flex-direction: column;
        gap: 10px; 
        color: white;
    }

    p {
        margin: 0 0 15px 0;
        font-size: 1.2rem;
        font-weight: bold;
        font-family: Verdana;
    }

    .start-button {
        background-color: #b7dfffcc;
        color: white;
        width: 110px;
        padding: 8px 20px;
        border-radius: 20px;
        text-decoration: none;
        font-size: 0.9rem;
        font-family: Verdana;
        transition: 0.2s ease;
        text-align: center;
        align-self: flex-end;
    }

    .start-button:hover {
        background-color: #E72025;
    }
</style>